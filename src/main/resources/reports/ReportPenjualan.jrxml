<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ReportPenjualan"
              pageWidth="595" pageHeight="842" columnWidth="535"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <queryString language="SQL"><![CDATA[
SELECT 
    p.id,
    p.tanggal,
    p.total_harga,
    c.nama AS customer_nama,
    m.merk AS mobil_merk,
    m.model AS mobil_model
FROM penjualan p
LEFT JOIN customer c ON p.customer_id = c.id
LEFT JOIN mobil m ON p.mobil_id = m.id
    ]]></queryString>

    <field name="id" class="java.lang.Integer"/>
    <field name="customer_nama" class="java.lang.String"/>
    <field name="tanggal" class="java.sql.Date"/>
    <field name="total_harga" class="java.math.BigDecimal"/>
    <field name="mobil_merk" class="java.lang.String"/>
    <field name="mobil_model" class="java.lang.String"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="300" height="30"/>
                <text><![CDATA[Laporan Penjualan]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0"   y="0" width="80"  height="20"/><text><![CDATA[ID]]></text></staticText>
            <staticText><reportElement x="80"  y="0" width="140" height="20"/><text><![CDATA[Customer]]></text></staticText>
            <staticText><reportElement x="220" y="0" width="100" height="20"/><text><![CDATA[Tanggal]]></text></staticText>
            <staticText><reportElement x="320" y="0" width="100" height="20"/><text><![CDATA[Total]]></text></staticText>
            <staticText><reportElement x="420" y="0" width="150" height="20"/><text><![CDATA[Mobil]]></text></staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField><reportElement x="0"   y="0" width="80"  height="20"/><textFieldExpression><![CDATA[$F{id}]]></textFieldExpression></textField>
            <textField><reportElement x="80"  y="0" width="140" height="20"/><textFieldExpression><![CDATA[$F{customer_nama}]]></textFieldExpression></textField>
            <textField><reportElement x="220" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{tanggal}]]></textFieldExpression></textField>
            <textField><reportElement x="320" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{total_harga}]]></textFieldExpression></textField>
            <textField><reportElement x="420" y="0" width="150" height="20"/><textFieldExpression><![CDATA[$F{mobil_merk} + " " + $F{mobil_model}]]></textFieldExpression></textField>
        </band>
    </detail>

</jasperReport>
